<div class="container">
    <h1>Bob's Burgers</h1>
 
    <div class="row">
        <div class="undevoured-burgers col-lg-5">
            <h2 class="yellow">Burger Menu</h2>
    
            <ul>
                {{#each burgers}}
                    {{#unless devoured}}
                        <li>
                            <span class="burger">{{this.burger_name}}</span>

                            <button type="submit" class="change-position" data-id="{{id}}" data-nowdevoured="{{devoured}}">
                                Devour!
                            </button>
                        </li>
                    {{/unless}}
                {{/each}} 
            </ul>
        </div>

        <div class="add-burger col-lg-3">
            <h2>Suggest A New Burger!</h2>

            <form action="/burgers" method="POST">
                <input type="text" id="name" name="burger_name">
    
                <button type="submit" class="add-burger-button">
                    Add To Menu
                </button>
            </form>    
        </div>

        <div class="devoured-burgers col-lg-4">
            <h2 class="yellow">Sold Out</h2>

            <ul>
                {{#each burgers}}
                    {{#if devoured}}
                        <li>
                            <span class="burger">{{this.burger_name}}</span>
                                <button type="submit" class="send-back" data-id="{{id}}" data-sentBack="{{devoured}}">
                                    Back in stock!
                                </button>
                        </li>        
                    {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>        

